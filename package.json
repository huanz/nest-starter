{
  "name": "nest-wechat",
  "version": "1.0.0",
  "description": "nestjs wechat",
  "author": "bukas",
  "license": "MIT",
  "scripts": {
    "start": "nodemon",
    "debug": "nodemon --config nodemon-debug.json",
    "build": "rimraf dist && tsc && copyfiles -u 1 'server/public/**/*' 'server/views/**/*' dist",
    "prod": "node dist/main.js",
    "sync": "NODE_ENV=production typeorm schema:sync",
    "deploy": "pm2 deploy production update",
    "format": "prettier --write \"server/**/*.ts\"",
    "lint": "tslint -p tsconfig.json -c tslint.json"
  },
  "dependencies": {
    "@nestjs/common": "^5.6.2",
    "@nestjs/core": "^5.6.2",
    "@nestjs/passport": "^5.1.0",
    "@nestjs/typeorm": "^5.2.2",
    "class-transformer": "^0.2.0",
    "class-validator": "^0.9.1",
    "compression": "^1.7.3",
    "cookie-parser": "^1.4.3",
    "copyfiles": "^2.1.0",
    "express-session": "^1.15.6",
    "helmet": "^3.15.0",
    "moment": "^2.24.0",
    "mysql": "^2.16.0",
    "passport": "^0.4.0",
    "co-wechat-api": "^3.8.2",
    "passport-wechat": "^2.0.4",
    "rimraf": "^2.6.3",
    "rxjs": "^6.3.3",
    "typeorm": "^0.2.12",
    "typescript": "^3.2.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.3.2",
    "@commitlint/config-conventional": "^7.3.1",
    "@types/express": "^4.16.1",
    "@types/express-session": "^1.15.11",
    "@types/node": "^10.12.18",
    "husky": "^1.3.1",
    "nodemon": "^1.18.9",
    "prettier": "^1.16.1",
    "ts-node": "^8.0.1",
    "tslint": "5.12.1"
  }
}
